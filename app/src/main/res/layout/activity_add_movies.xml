<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.movielist.add_moviesActivity">

    <TextView
        android:id="@+id/addNewMovie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Movie Title: "
        android:paddingBottom="15dp"
        android:textSize="20dp"/>
    <EditText
        android:id="@+id/newMovie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_toRightOf="@+id/addNewMovie"/>

    <TextView
        android:id="@+id/addNewCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IMDB Code: "
        android:textSize="20dp"
        android:paddingTop="15dp"
        android:layout_below="@+id/addNewMovie"/>
    <EditText
        android:id="@+id/newCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="7"
        android:layout_toRightOf="@+id/addNewCode"
        android:layout_below="@+id/addNewMovie"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:id="@+id/button"
        android:text = "Add"
        android:layout_below="@+id/addNewCode"
        android:layout_centerHorizontal="true"
        android:paddingTop="20dp"
        android:onClick="Buttonpressed"/>
</RelativeLayout>


